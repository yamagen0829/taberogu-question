package com.example.nagoyameshi.repository;

import java.util.List;

import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.data.jpa.repository.JpaRepository;

import com.example.nagoyameshi.entity.Review;

public interface ReviewRepository extends JpaRepository<Review, Integer>{
	List<Review> findByRestaurant_Id(Integer restaurantId);
	Page<Review> findByRestaurant_IdOrderByScoreDesc(Integer restaurantId, Pageable pageable);
//    Page<Review> findByRestaurant_Id(Integer restaurantId, Pageable pageable);
}
