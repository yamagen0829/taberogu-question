package com.example.nagoyameshi.service;

import org.springframework.stereotype.Service;

@Service
public class ReservationService {
  // 人数が定員以下かどうかをチェックする
	public boolean isWithinNumberOfSeat(Integer numberOfPeople, Integer numberOfSeat) {
		return numberOfPeople <= numberOfSeat;
	}

  // 料金を計算する
	public Integer calculatePrice(Localdate reservedDatetime, Integer price) {
		int price = amount * (int)numberOfPeople;
		return price;
	}
}
