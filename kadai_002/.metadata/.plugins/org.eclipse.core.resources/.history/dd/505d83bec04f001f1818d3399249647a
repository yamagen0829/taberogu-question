                                         </li>
                                         <li th:each="i : ${#numbers.sequence(0, favoritePage.getTotalPages() - 1)}" class="page-item">
                                             <span th:if="${i == favoritePage.getNumber()}" class="page-link active nagoyameshi-active" th:text="${i + 1}"></span>
                                             <a th:unless="${i == favoritePage.getNumber()}" th:href="@{/restaurants(page = ${i})}" class="page-link nagoyameshi-page-link" th:text="${i + 1}"></a>
                                         </li>
                                         <li class="page-item">                        
                                             <span th:if="${favoritePage.isLast()}" class="page-link disabled">次</span>
                                             <a th:unless="${favoritePage.isLast()}" th:href="@{/restaurants(page = ${favoritePage.getNumber() + 1})}" class="page-link nagoyameshi-page-link">次</a>
